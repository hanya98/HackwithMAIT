    <script>
        // Smooth transition on load
        window.addEventListener("load", () => {
            document.body.classList.add("loaded");
        });

        // ⭐ JAVASCRIPT FOR CHAT FUNCTIONALITY ⭐
        document.addEventListener('DOMContentLoaded', () => {
            const chatInput = document.getElementById('chat-input');
            const sendButton = document.getElementById('send-button');
            const chatMessages = document.getElementById('chat-messages');

            // Function to get current time in HH:MM AM/PM format
            const getCurrentTime = () => {
                const now = new Date();
                const hours = now.getHours();
                const minutes = now.getMinutes();
                const ampm = hours >= 12 ? 'PM' : 'AM';
                const formattedHours = hours % 12 || 12; // Convert 24hr to 12hr format
                const formattedMinutes = minutes < 10 ? '0' + minutes : minutes;
                return `${formattedHours}:${formattedMinutes} ${ampm}`;
            };

            // Main function to send the message
            const sendMessage = () => {
                const messageText = chatInput.value.trim();

                if (messageText === '') {
                    return;
                }

                // 1. Create the new message element (User message is 'pwd' for right alignment)
                const messageElement = document.createElement('div');
                messageElement.className = 'message pwd'; 
                
                // 2. Set the content, including the timestamp
                messageElement.innerHTML = `
                    ${messageText}
                    <span class="time">${getCurrentTime()}</span>
                `;

                // 3. Append the new message to the chat container
                chatMessages.appendChild(messageElement);

                // 4. Clear the input field
                chatInput.value = '';

                // 5. Scroll to the bottom to view the new message
                chatMessages.scrollTop = chatMessages.scrollHeight;
            };

            // Event listener for the Send button click
            sendButton.addEventListener('click', sendMessage);

            // Event listener for the Enter keypress on the input field
            chatInput.addEventListener('keypress', (e) => {
                if (e.key === 'Enter') {
                    sendMessage();
                }
            });
        });
    </script>

